<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:component-scan base-package="com.keepthinker.wavemessaging" />
	<context:property-placeholder location="wm.properties"/>
	
	<bean id="serverStartup" class="com.keepthinker.wavemessaging.handler.HandlerStartup">
		<constructor-arg name="port" value="${server.port}"/>
		<constructor-arg name="host" value="${server.host}"/>
	</bean>
	
	<import resource="spring-quartz.xml"/>
</beans>