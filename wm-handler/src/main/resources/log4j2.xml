<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="" monitorInterval="30">
    <Appenders>
        <RollingRandomAccessFile name="RollingRandomAccessFile"
                                 fileName="logs/wm-handler.log"
                                 filePattern="logs/$${date:yyyy-MM}/wm-handler-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %c [%t] %m%n"/>
        </Console>

        <RollingRandomAccessFile name="message-file"
                                 fileName="logs/message.log"
                                 filePattern="logs/$${date:yyyy-MM}/message-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="client-file"
                                 fileName="logs/client.log"
                                 filePattern="logs/$${date:yyyy-MM}/client-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>

    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="RollingRandomAccessFile"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="io.netty" level="info">
        </Logger>
        <Logger name="org.springframework" level="info">
        </Logger>
        <Logger name="org.apache" level="info">
        </Logger>

        <Logger name="client" level="trace">
            <AppenderRef ref="client-file"/>
        </Logger>
        <Logger name="message" level="trace" additivity="false">
            <AppenderRef ref="message-file"/>
        </Logger>
    </Loggers>
</Configuration>